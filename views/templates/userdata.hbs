<div class="container mt-4">
  <div class="card-deck">
    <div class="card col-4">
      <div class="card-body">
        <h5 class="card-title">Address {{index}}</h5>
        <p class="card-text">
        {{address.firstName}} {{address.lastName}}
        </p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <b>Phone number</b><br></br>
          {{address.phoneNo}}
        </li>
        <li class="list-group-item">
          <b>Address</b><br></br>
          {{address.street}} {{address.buildingNo}} / {{address.flatNo}}
          <br></br>
          {{address.postalCode}}, {{address.city}}, {{address.province}}, {{country}}
        </li>
        <li class="list-group-item text-center">
          <a href="#" class="btn btn-danger" style="width:4rem">
            <i class="fa fa-minus"></i>
          </a>
        </li>
      </ul>
    </div>
    <div class="card col-4">
      <div class="card-body">
        <h5 class="card-title">Title</h5>
        <p class="card-text">Address</p>
      </div>
    </div>
    <div class="card col-4">
      <div class="card-body">
        <h5 class="card-title">Title</h5>
        <p class="card-text">Address</p>
      </div>
    </div>
  </div>
  <div class="mx-auto text-center mt-4">
    <a href='/account/addaddress' style="width: 4rem" class="btn btn-primary ">
      <i class="fa fa-plus"></i>
    </a>
  </div>
</div>
