<ul class="nav justify-content-center bg-light">
  {{#each categories as |category|}}

    <li class="nav-item dropdown">
      {{#if category.children}}
        <a class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" href="#" aria-haspopup="true" aria-expanded="false">
          {{category.name}}
        </a>
        <div class="dropdown-menu">
          {{#each category.children}}
            <a class="dropdown-item" href="/products?category={{this.ID}}">{{this.name}}</a>
          {{/each}}
          <div class="dropdown-divider"></div>
          <a class="dropdown-item" href="/products?category={{category.ID}}">{{category.name}}</a>
        </div>
      {{else}}
        <a class="nav-link"  href="/products?category={{category.ID}}" aria-haspopup="true" aria-expanded="false">
          {{category.name}}
        </a>
      {{/if}}
    </li>
  {{/each}}
</ul>
<div class="container mt-4">
  <h2>Hello World</h2>
</div>
