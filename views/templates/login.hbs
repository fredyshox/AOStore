<div class="container mt-4">
  <div class="row">
    <div class="col-sm">
      <h3>Sign in</h3>
      <p>Sign in to your account.</p>
      <form class="mt-4">
        <div class="form-group">
          <label>Email address</label>
          <input type="email" class="form-control" placeholder="Enter email">
        </div>
        <div class="form-group">
          <label>Password</label>
          <input type="password" class="form-control" placeholder="Password">
        </div>
        <div class="mt-2 text-center">
        </div>
        <button type="submit" class="btn btn-primary mt-4 btn-block">Log in</button>
      </form>
    </div>
    <div class="col-sm offset-md-1">
      <h3>Register</h3>
      <p>Create new account in AOS store.</p>
      <form class="mt-4">
        <div class="form-group">
          <label>Email address</label>
          <input type="email" class="form-control" placeholder="Enter email">
        </div>
        <div class="form-group">
          <label>Password</label>
          <input type="password" class="form-control" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-primary mt-4 btn-block">Register</button>
      </form>
    </div>
  </div>
</div>
