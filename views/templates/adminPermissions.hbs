  {{#if permissions}}
    <div>
      <form class="mt-4" id='permissions-form'>
        <div class="form-group">
          <label>Put user ID and select permissions</label>

          <div class="form-group">
            <input type="id" class="form-control" placeholder="User ID" name="id">
            <input type="radio" name="permissions" value="0" checked> User<br>
            <input type="radio" name="permissions" value="1"> Moderator<br>
            <input type="radio" name="permissions" value="2"> Admin
          </div>
          <button type="submit" class="btn btn-primary mt-4 btn-block">Set permissions</button>
        </div>
      </form>
    </div>
  {{else}}
    <div class="text-center">
      <h3>You don't have permissions</h3>
      <p>Page only available for administration</p>
    </div>
  {{/if}}
